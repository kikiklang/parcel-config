{
  "name": "parcel-config",
  "version": "0.0.1",
  "description": "A boilerplate for parcel based projects",
  "main": "src/html/index.html",
  "author": "Vincent Bourdeau",
  "license": "MIT",
  "scripts": {
    "dev": "parcel src/html/index.html --out-dir development -p 3000",
    "build": "parcel build src/html/index.html --out-dir dist --public-url ./ --no-cache",
    "serve": "npx serve dist",
    "clean": "rimraf ./development && rimraf -rf ./.cache && rimraf -rf ./dist",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "stylelint --fix 'src/css/*.css' && eslint  --fix 'src/js/*.js'",
    "prettier": "prettier --write 'src/**/*.+(js|html|css|json|md|yml|yaml)'"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.5.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "keywords": [
    "parcel",
    "boilerplate"
  ],
  "dependencies": {}
}
